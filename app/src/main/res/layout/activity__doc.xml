<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    tools:context=".Activity_Doc">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Space
        android:layout_width="match_parent"
        android:layout_height="150px" />

    <TableRow
        android:paddingLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="202dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Traduccion"
            android:textSize="30sp" />

        <Space
            android:layout_width="100dp"
            android:layout_height="0px" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="50dp"
            android:text="@string/NP"
            android:textSize="30sp" />


    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50px" />

    <TableRow
        android:paddingLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="202dp">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:paddingRight="10dp"
            android:src="@drawable/traducciones" />

        <Space
            android:layout_width="100dp"
            android:layout_height="0px" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:layout_marginLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/notary_publick" />
    </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="200px" />



        <TableRow
            android:paddingLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="202dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Tax"
                android:textSize="30sp" />

            <Space
                android:layout_width="100dp"
                android:layout_height="0px" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="50dp"
                android:text="@string/acord"
                android:textSize="30sp" />


        </TableRow>

        <TableRow
            android:paddingLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="202dp">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:paddingRight="10dp"
            android:src="@drawable/if_13_tax_1871418" />

            <Space
                android:layout_width="100dp"
                android:layout_height="0px" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:layout_marginLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/acuerdos" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="200px" />

        <TableRow
            android:paddingLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="202dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/contracts"
                android:textSize="30sp" />

            <Space
                android:layout_width="100dp"
                android:layout_height="0px" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="50dp"
                android:text="@string/PermissionTravel"
                android:textSize="30sp" />


        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50px" />

        <TableRow
            android:paddingLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="202dp">

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="128dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"
                android:paddingRight="10dp"
                android:src="@drawable/poderes_y_contratos" />

            <Space
                android:layout_width="100dp"
                android:layout_height="0px" />

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="128dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/permisos_para_viajar" />
        </TableRow>
    </TableLayout>
</LinearLayout>