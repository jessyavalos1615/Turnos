<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingLeft="20dp"
    android:paddingBottom="20dp"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/conexion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:text="@string/conection"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <TableRow
                android:id="@+id/R11"
                android:layout_width="match_parent"
                android:layout_height="202dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/mails"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/pay"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="50dp"
                    android:text="@string/contracts"
                    android:textSize="30sp" />

            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <TableRow>

                <ImageView
                    android:id="@+id/mail"
                    android:layout_width="500px"
                    android:layout_height="match_parent"
                    android:onClick="sendData"
                    android:src="@drawable/ic_mail_outline_black_48dp" />

                <ImageView
                    android:id="@+id/service"
                    android:layout_width="500px"
                    android:layout_height="match_parent"
                    android:src="@drawable/if_shopify_onlyne_payments_pay_online_send_money_credit_card_card_ecommerce_2325037" />

                <ImageView
                    android:id="@+id/powers"
                    android:layout_width="500px"
                    android:layout_height="match_parent"
                    android:src="@drawable/poderes_y_contratos" />
            </TableRow>

            <Space
                android:id="@+id/S1"
                android:layout_width="match_parent"
                android:layout_height="70px" />

            <TableRow
                android:id="@+id/R2"
                android:layout_width="match_parent"
                android:layout_height="29dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/sends"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/prints"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="30dp"
                    android:layout_weight="0"
                    android:text="@string/acord"
                    android:textSize="30sp" />
            </TableRow>

            <Space
                android:id="@+id/S2"
                android:layout_width="match_parent"
                android:layout_height="70px" />

            <TableRow
                android:id="@+id/R3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/sends"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/if_97_2530016" />

                <ImageView
                    android:id="@+id/copy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/if_thefreeforty_withdraw_1243703" />

                <ImageView
                    android:id="@+id/acord"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/acuerdos" />
            </TableRow>

            <Space
                android:id="@+id/S3"
                android:layout_width="match_parent"
                android:layout_height="70px" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="50px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Travel"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Scan"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Tax"
                    android:textSize="30sp" />

            </TableRow>

            <Space
                android:id="@+id/S9"
                android:layout_width="match_parent"
                android:layout_height="70px" />
            <TableRow
                android:id="@+id/R4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/travel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/agencias_de_viajes" />


                <ImageView
                    android:id="@+id/scan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/centro_de_copiado" />

                <ImageView
                    android:id="@+id/tax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/if_13_tax_1871418" />
            </TableRow>

            <Space
                android:id="@+id/S4"
                android:layout_width="match_parent"
                android:layout_height="70px" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:text="@string/LegacyVehicule"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="50dp"
                    android:text="@string/LlenadoForms"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/MoneyOrd"
                    android:textSize="30sp" />

            </TableRow>
            <Space
                android:id="@+id/S10"
                android:layout_width="match_parent"
                android:layout_height="70px" />
            <TableRow
                android:id="@+id/R5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/car"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/legalizacion_de_vehiculos" />

                <ImageView
                    android:id="@+id/forms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/llenado_de_formas" />

                <ImageView
                    android:id="@+id/moneyOrd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/money_orders" />
            </TableRow>
            <Space
                android:id="@+id/S11"
                android:layout_width="match_parent"
                android:layout_height="70px" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/NP"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="50dp"
                    android:text="@string/phone"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/pack"
                    android:textSize="30sp" />

            </TableRow>

            <Space
                android:id="@+id/S5"
                android:layout_width="match_parent"
                android:layout_height="70px" />

            <TableRow
                android:id="@+id/R6"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/notary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/notary_publick" />

                <ImageView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pago_servicios" />

                <ImageView
                    android:id="@+id/pack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/paqueteria" />
            </TableRow>

            <Space
                android:id="@+id/S6"
                android:layout_width="match_parent"
                android:layout_height="70px" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="25dp"
                    android:text="@string/PassPort"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="50dp"
                    android:text="@string/PermissionTravel"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="50dp"
                    android:text="@string/TPV"
                    android:textSize="30sp" />

            </TableRow>

            <Space
                android:id="@+id/S7"
                android:layout_width="match_parent"
                android:layout_height="70px" />


            <TableRow
                android:id="@+id/R8"
                android:layout_width="match_parent"
                android:layout_height="50px">

                <ImageView
                    android:id="@+id/photos"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:src="@drawable/pasaporte" />

                <ImageView
                    android:id="@+id/loan"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:src="@drawable/permisos_para_viajar" />

                <ImageView
                    android:id="@+id/temp_car"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:src="@drawable/permisos_temporales_de_vehiculos" />
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="70px"/>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="@string/Traduccion"
                    android:textSize="30sp" />

            </TableRow>


            <Space
                android:layout_width="match_parent"
                android:layout_height="70px"/>


            <TableRow
                android:id="@+id/R9"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/traduction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/traducciones" />


            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>