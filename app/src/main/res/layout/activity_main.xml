<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingLeft="65dp"
    android:paddingTop="30dp"
    android:paddingBottom="20dp"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/land_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/conexion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:text="@string/conection"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <TableRow
                android:id="@+id/R11"
                android:layout_width="match_parent"
                android:layout_height="202dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/mails"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="50dp"
                    android:text="@string/pay"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="400px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="40dp"
                    android:text="@string/prints"
                    android:textSize="30sp" />

            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <TableRow>

                <ImageButton
                    android:id="@+id/mail"
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_mail_outline_black_48dp" />

                <ImageButton
                    android:id="@+id/service"
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="35dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/if_shopify_onlyne_payments_pay_online_send_money_credit_card_card_ecommerce_2325037" />


                <ImageButton
                    android:id="@+id/powers"
                    android:layout_width="68dp"
                    android:layout_height="128dp"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="35dp"
                    android:src="@drawable/copy" />
            </TableRow>

            <Space
                android:id="@+id/S1"
                android:layout_width="match_parent"
                android:layout_height="70px" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="29dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:layout_gravity="center"
                    android:text="@string/sends"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Scan"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="50dp"
                    android:text="@string/PassPort"
                    android:textSize="30sp" />
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="70px" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="35dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/if_97_2530016" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="35dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/centro_de_copiado" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="35dp"
                    android:paddingRight="20dp"
                    android:src="@drawable/pasaporte" />
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="70px" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="40dp"
                    android:text="@string/LlenadoForms"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/fax"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:text="@string/phone"
                    android:textSize="30sp" />

            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="70px" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="35dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/llenado_de_formas" />


                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="35dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/fax" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="35dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/_ndice" />
            </TableRow>

            <Space
                android:id="@+id/S4"
                android:layout_width="match_parent"
                android:layout_height="70px" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/MoneyOrd"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="50dp"
                    android:text="@string/othe"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="@string/inf"
                    android:textSize="30sp" />

            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="70px" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="35dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/money_orders" />


                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="35dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="60dp"
                    android:src="@drawable/if_other_1167997" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="35dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/if_info_circle_symbol_information_letter_1396823" />

            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="70px" />



        </TableLayout>
    </HorizontalScrollView>
    </ScrollView>
</LinearLayout>